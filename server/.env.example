# ====================================
# FOOD HUB - Backend Environment Variables
# ====================================
# Copy this file to .env and fill in your values

# ====================================
# Server Configuration
# ====================================
PORT=8000
NODE_ENV=production

# ====================================
# MongoDB Database
# ====================================
MONGO_URI=your_mongodb_connection_string

# ====================================
# JWT Secret
# ====================================
JWT_SECRET=your_jwt_secret_key_here

# ====================================
# Resend Email Configuration
# ====================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key

# The email address you verified in Resend
# Example: noreply@yourdomain.com or onboarding@resend.dev (for testing)
RESEND_FROM_EMAIL=onboarding@resend.dev

# ====================================
# Frontend & Backend URLs
# ====================================
# Your Render static site URL (frontend)
# Example: https://your-app-name.onrender.com
FRONTEND_URL=https://your-frontend-app.onrender.com

# Your Render web service URL (backend)
# Example: https://your-backend-api.onrender.com
BACKEND_URL=https://your-backend-api.onrender.com

# ====================================
# Cloudinary Configuration
# ====================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ====================================
# Stripe Payment Configuration
# ====================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ====================================
# CORS Configuration
# ====================================
# Add your frontend URL here for CORS
CLIENT_URL=https://your-frontend-app.onrender.com
